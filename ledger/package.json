{
  "name": "ledger.disease.zone",
  "version": "1.0.0",
  "description": "Blockchain infrastructure for disease.zone - Private chains, sidechains, and cross-chain bridges for healthcare data",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "build": "npm run build:hyperledger && npm run build:sidechain",
    "build:hyperledger": "cd hyperledger && ./scripts/build-network.sh",
    "build:sidechain": "cd sidechain && npm run build",
    "deploy:contracts": "cd smart-contracts && npm run deploy",
    "start:hyperledger": "cd hyperledger && ./scripts/start-network.sh",
    "stop:hyperledger": "cd hyperledger && ./scripts/stop-network.sh",
    "start:sidechain": "cd sidechain && npm start",
    "start:bridges": "cd bridges && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "npm run test:contracts && npm run test:api",
    "test:contracts": "cd smart-contracts && npm test",
    "test:api": "cd api && npm test",
    "generate-certs": "./scripts/generate-certificates.sh",
    "setup:dev": "./scripts/setup-development.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "dotenv": "^16.0.3",
    "axios": "^1.6.0",
    "web3": "^4.2.0",
    "@polygon-edge/web3": "^1.0.0",
    "fabric-network": "^2.2.19",
    "fabric-client": "^1.4.22",
    "fabric-ca-client": "^1.4.22",
    "ethers": "^6.8.0",
    "@openzeppelin/contracts": "^5.0.0",
    "winston": "^3.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.0",
    "kafka-node": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "hardhat": "^2.19.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "ethereum-waffle": "^4.0.10"
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "hyperledger",
    "polygon",
    "sidechain",
    "disease-tracking",
    "health-data",
    "privacy",
    "compliance"
  ],
  "author": "disease.zone",
  "license": "MIT"
}