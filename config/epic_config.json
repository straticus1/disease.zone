{
  "epic": {
    "version": "1.0.0",
    "environments": {
      "sandbox": {
        "name": "Epic Sandbox Environment",
        "baseUrl": "https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4",
        "authUrl": "https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize",
        "tokenUrl": "https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token",
        "wellKnownUrl": "https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4/.well-known/smart-configuration",
        "clientId": "${EPIC_SANDBOX_CLIENT_ID}",
        "clientSecret": "${EPIC_SANDBOX_CLIENT_SECRET}",
        "fhirVersion": "R4",
        "scope": "patient/*.read launch/patient",
        "rateLimitPerMinute": 60,
        "active": true
      },
      "production": {
        "name": "Epic Production Environment",
        "baseUrl": null,
        "authUrl": null,
        "tokenUrl": null,
        "wellKnownUrl": null,
        "clientId": "${EPIC_PRODUCTION_CLIENT_ID}",
        "clientSecret": "${EPIC_PRODUCTION_CLIENT_SECRET}",
        "fhirVersion": "R4",
        "scope": "patient/*.read launch/patient",
        "rateLimitPerMinute": 60,
        "active": false,
        "note": "Configure per Epic organization after App Orchard approval"
      }
    },
    "supportedFhirVersions": ["R4", "STU3"],
    "preferredFhirVersion": "R4",
    "requiredScopes": [
      "patient/Patient.read",
      "patient/Observation.read",
      "patient/Condition.read",
      "patient/MedicationRequest.read",
      "patient/AllergyIntolerance.read",
      "patient/DiagnosticReport.read",
      "launch/patient"
    ],
    "optionalScopes": [
      "patient/Procedure.read",
      "patient/Immunization.read",
      "patient/CarePlan.read",
      "patient/Appointment.read",
      "patient/Encounter.read",
      "patient/DocumentReference.read",
      "patient/Communication.read"
    ],
    "security": {
      "pkceRequired": true,
      "stateRequired": true,
      "audRequired": true,
      "tokenEncryption": "AES-256",
      "certificatePinning": true,
      "tlsVersion": "1.3"
    },
    "performance": {
      "timeoutMs": 30000,
      "retryAttempts": 3,
      "rateLimitBuffer": 0.8,
      "cacheExpiry": 3600,
      "maxConcurrentRequests": 10
    },
    "compliance": {
      "hipaaCompliant": true,
      "gdprCompliant": true,
      "soc2Type2": true,
      "auditLogging": true,
      "dataMinimization": true,
      "rightToErasure": true
    },
    "appOrchard": {
      "targetTier": "Workshop",
      "applicationId": null,
      "certificationStatus": "in_progress",
      "submissionDate": null,
      "approvalDate": null,
      "requirements": {
        "technicalReview": "pending",
        "securityAssessment": "pending",
        "clinicalSafetyReview": "pending",
        "usabilityTesting": "pending"
      }
    },
    "monitoring": {
      "healthCheckEnabled": true,
      "metricsCollection": true,
      "alerting": {
        "errorRateThreshold": 0.05,
        "responseTimeThreshold": 2000,
        "uptimeThreshold": 0.999
      },
      "logging": {
        "level": "info",
        "auditTrail": true,
        "retentionDays": 2555
      }
    }
  },
  "integrationPriorities": {
    "phase1": {
      "name": "Core Patient Data",
      "resources": ["Patient", "Observation", "Condition", "MedicationRequest", "AllergyIntolerance"],
      "timeline": "Q1 2025",
      "businessValue": "High"
    },
    "phase2": {
      "name": "Clinical Workflow",
      "resources": ["DiagnosticReport", "Procedure", "Immunization", "CarePlan"],
      "timeline": "Q2 2025",
      "businessValue": "Medium"
    },
    "phase3": {
      "name": "Scheduling & Communication",
      "resources": ["Appointment", "Encounter", "DocumentReference", "Communication"],
      "timeline": "Q3 2025",
      "businessValue": "Medium"
    },
    "phase4": {
      "name": "Advanced Analytics",
      "resources": ["Custom FHIR Extensions", "Bulk Data Export", "Population Health"],
      "timeline": "Q4 2025",
      "businessValue": "High"
    }
  },
  "businessImpact": {
    "targetCustomers": {
      "healthSystems": 100,
      "hospitals": 500,
      "clinics": 2000,
      "users": 50000
    },
    "revenueProjections": {
      "year1": 2000000,
      "year2": 8000000,
      "year3": 20000000
    },
    "marketPenetration": {
      "epicMarketShare": 0.78,
      "targetPenetration": 0.05,
      "totalAddressableMarket": 47800000000
    }
  }
}