# Disease.Zone Production Environment Variables
# Copy to .env and fill in values

# Database
POSTGRES_PASSWORD=your-secure-postgres-password

# Application Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-min-32-chars
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key

# Keycloak SSO
KEYCLOAK_URL=https://auth.blueblocks.xyz
KEYCLOAK_REALM=disease-zone
KEYCLOAK_CLIENT_ID=disease-zone-app
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# BlueBlocks Integration
BLUEBLOCKS_API_URL=https://api.blueblocks.xyz
BLUEBLOCKS_RPC_URL=https://rpc.blueblocks.xyz
BLUEBLOCKS_CHAIN_ID=1

# External APIs (optional)
CDC_API_KEY=
WHO_API_KEY=
FDA_API_KEY=

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password
