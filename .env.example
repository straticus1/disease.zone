# Server Configuration
PORT=3000

# Mapping Service API Keys (Optional - bring your own keys)
# Leave blank to use only OpenStreetMap (free tier)

# Mapbox API Key (for Silver and Gold tiers)
# Get your key from: https://account.mapbox.com/
MAPBOX_API_KEY=

# Google Maps API Key (for Gold tier only)
# Get your key from: https://console.cloud.google.com/google/maps-apis/
GOOGLE_MAPS_API_KEY=

# Database Configuration (if needed in the future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=std_surveillance
# DB_USER=
# DB_PASS=

# External API Configuration

# CDC API Keys for enhanced data access
# Get your key from: https://data.cdc.gov/ (requires registration)
CDC_API_KEY=

# Disease.sh API Key (optional - for premium features if available)
DISEASE_API_KEY=

# WHO Global Health Observatory API Key (when available)
WHO_API_KEY=

# Additional Global Health APIs
CALIFORNIA_API_KEY=
NEW_YORK_API_KEY=
TEXAS_API_KEY=
HEALTHMAP_API_KEY=
GISAID_API_KEY=
ECDC_API_KEY=
FDA_API_KEY=
CMS_API_KEY=
PROMED_API_KEY=

# Social Media & News Surveillance
SOCIAL_MEDIA_API_KEY=
NEWS_API_KEY=
TWITTER_API_KEY=
REDDIT_API_KEY=

# Environmental & Context APIs
WEATHER_API_KEY=
MOBILITY_API_KEY=
POPULATION_API_KEY=

# Machine Learning & Analytics
ML_SERVICE_API_KEY=
PREDICTION_API_KEY=

# API Access Configuration
# Set to 'standard', 'enhanced', or 'premium' based on available keys
# 'standard' = disease.sh + NHANES (no keys needed)
# 'enhanced' = above + CDC API key
# 'premium' = above + multiple API keys
API_ACCESS_LEVEL=standard

# Rate Limiting Configuration
API_RATE_LIMIT_ENABLED=true
API_REQUESTS_PER_MINUTE=100

# Data Source Configuration - disease.sh prioritized for immediate access
# Enable/disable specific data sources
ENABLE_CDC_DATA=true
ENABLE_DISEASE_SH=true
ENABLE_WHO_DATA=false
ENABLE_NHANES_DATA=true
ENABLE_HPV_IMPACT=true

# Cache Configuration
DATA_CACHE_ENABLED=true
CACHE_EXPIRY_MINUTES=60

# Surveillance Data Configuration
ENABLE_STI_SURVEILLANCE=true
ENABLE_HIV_SURVEILLANCE=true
ENABLE_HPV_SURVEILLANCE=true
ENABLE_HERPES_SURVEILLANCE=true

# Fallback Configuration
ENABLE_DATA_FALLBACKS=true
FALLBACK_TO_CACHED_DATA=true
FALLBACK_TO_PLACEHOLDER_DATA=false

# Database Configuration (Production)
DATABASE_URL=postgresql://diseaseZone:changeme@postgres:5432/disease_zone
POSTGRES_DB=disease_zone
POSTGRES_USER=diseaseZone
POSTGRES_PASSWORD=changeme

# Application Secrets
SESSION_SECRET=your-session-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Blockchain Integration Configuration
BLOCKCHAIN_INTEGRATION_ENABLED=true
LEDGER_API_URL=http://localhost:4000
LEDGER_API_KEY=your-ledger-api-integration-key
BLOCKCHAIN_BATCH_SIZE=50
BLOCKCHAIN_RETRY_ATTEMPTS=3

# Blockchain Network Configuration (for ledger subdirectory)
VALIDATOR_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef01
BOOTNODE_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef02
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-key
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.matic.today
INFURA_KEY=your-infura-project-key

# Enhanced Security Configuration
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=https://www.disease.zone,https://api.disease.zone,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
MAX_FAILED_ATTEMPTS=5
BLOCK_DURATION_MS=900000

# Advanced Security Features
ENABLE_INPUT_VALIDATION=true
ENABLE_GEOLOCATION_ENCRYPTION=true
ENABLE_REAL_BALANCE_CHECKING=true
ENABLE_TRANSACTION_VALIDATION=true
ENABLE_ADVANCED_LOGGING=true

# Security Monitoring
SECURITY_LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_DAYS=90
ALERT_ON_SUSPICIOUS_ACTIVITY=true

# FHIR Integration Security
FHIR_CLIENT_ID=your-fhir-client-id
FHIR_CLIENT_SECRET=your-fhir-client-secret
FHIR_REDIRECT_URI=https://api.disease.zone/api/fhir/callback
FHIR_ENCRYPTION_KEY=your-fhir-data-encryption-key
