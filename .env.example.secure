# Security Release 3: Secure Environment Configuration Template
# Copy to .env and populate with your actual values
# DO NOT commit .env file to version control

# ========================================
# CRITICAL SECURITY SETTINGS - REQUIRED
# ========================================

# Application Secrets (REQUIRED - Generate strong random values)
# Use: openssl rand -hex 32
SESSION_SECRET=
JWT_SECRET=
MFA_SECRET=
RECOVERY_CODE_SALT=

# Server Configuration
PORT=3000
NODE_ENV=production

# ========================================
# DATABASE CONFIGURATION
# ========================================

# SQLite (Development) or PostgreSQL (Production)
DATABASE_URL=
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=

# Redis Configuration (Optional but recommended for production)
REDIS_URL=

# ========================================
# API KEYS (Optional - Add as needed)
# ========================================

# Mapping Services
MAPBOX_API_KEY=
GOOGLE_MAPS_API_KEY=

# Health Data APIs
CDC_API_KEY=
WHO_API_KEY=
FDA_API_KEY=
HEALTHMAP_API_KEY=
GISAID_API_KEY=

# External Services
NEWS_API_KEY=
WEATHER_API_KEY=
INFURA_KEY=

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Enhanced Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
MAX_FAILED_ATTEMPTS=5
BLOCK_DURATION_MS=900000

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Security Features
ENABLE_INPUT_VALIDATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ADVANCED_LOGGING=true
SECURITY_LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# ========================================
# APPLICATION FEATURES
# ========================================

# API Access Level
API_ACCESS_LEVEL=standard

# Data Source Configuration
ENABLE_CDC_DATA=true
ENABLE_DISEASE_SH=true
ENABLE_WHO_DATA=false

# Cache Configuration
DATA_CACHE_ENABLED=true
CACHE_EXPIRY_MINUTES=60

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_REQUESTS_PER_MINUTE=100

# ========================================
# BLOCKCHAIN INTEGRATION (Optional)
# ========================================

BLOCKCHAIN_INTEGRATION_ENABLED=false
LEDGER_API_URL=
LEDGER_API_KEY=

# Network Configuration (Only if using blockchain)
ETHEREUM_RPC_URL=
POLYGON_RPC_URL=

# ========================================
# FHIR INTEGRATION (Optional)
# ========================================

FHIR_CLIENT_ID=
FHIR_CLIENT_SECRET=
FHIR_REDIRECT_URI=
FHIR_ENCRYPTION_KEY=

# ========================================
# MONITORING (Optional)
# ========================================

GRAFANA_USER=
GRAFANA_PASSWORD=